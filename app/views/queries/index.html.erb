<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for @query, html: {class: 'form-inline'} do |f| %>
        <div class="form-group mb-2">
          <label for="Make google Query" class="sr-only">Email</label>
          <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="Google search">
        </div>
        <div class="form-group mb-10">
          <%= f.label :query, 'Query', class: 'sr-only' %>
          <%= f.text_field :query, class: "form-control" %>
        </div>
        <%= f.submit 'Search', class: "btn btn-primary mb-2"%>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Query</th>
            <th scope="col">Results count</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @queries.each do |query| %>
            <tr>
              <td>1</td>
              <td><%= query.query%></td>
              <td><%= query.query_results.size %></td>
              <td>
                <div class="row">
                  <%= link_to 'Details', query, class: 'btn btn-primary' %>
                  <%= link_to 'Edit', edit_query_path(query), class: 'btn btn-primary' %>
                  <%= link_to 'Delete', query, method: :delete, class: 'btn btn-primary', data:{ confirm: 'Are tou sure?' } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>